<!-- profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/stylesheets/profileStyle.css"> <!-- Adjust the path to your CSS file -->
</head>
<body>
    <div class="profile-container">
        <h2>User Profile</h2>
        <p><strong>Name:</strong> <%= user.first_name %> <%= user.surname %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Year of Birth:</strong> <%= user.year_of_birth || 'Not provided' %></p>
        <p><strong>Average Grade:</strong> <%= user.average_grade %></p>

        <div class="performance-history">
            <h3>Performance History</h3>
            <table>
                <thead>
                    <tr>
                        <th>Quiz Chapter</th>
                        <th>Grade</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.performance_history.forEach((entry) => { %>
                        <tr>
                            <td><%= entry.quiz_chapter %></td>
                            <td><%= entry.grade %></td>
                            <td><%= new Date(entry.quiz_date).toLocaleDateString() %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

